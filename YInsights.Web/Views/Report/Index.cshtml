@{
    ViewData["Title"] = "Users";
}

<br />


<div class="row">
    <div class="col-lg-12">
        <h3>Users</h3>
        <div id="jsGrid"></div>
    </div>
</div>

@section Scripts {

    <script type="text/javascript">

        $(document).ready(function () {


            $("#jsGrid").jsGrid({
                height: "90%",
                width: "100%",

                sorting: true,
                paging: false,
              

                data:@Html.Raw(Json.Serialize(ViewBag.model)),

                fields: [
                    { name: "user", type: "text",width:100 },
                     { name: "topics", type: "text" ,width:150},
            { name: "articles", type: "number",width:50},
                { name: "id", type: "text",width:100 }
                ]
            });
        });


    </script>

}


